{
    "name": "rock-solid",
    "version": "1.0.0",
    "author": "David Davis <davidjamesdavis.djd@gmail.com>",
    "scripts": {
        "clean": "lerna clean",
        "empty-cache": "lerna run empty-cache",
        "init": "cd cms && sanity init && lerna run graphql-deploy",
        "format": "lerna run format",
        "graphql-deploy": "lerna run graphql-deploy",
        "now-deploy": "now --target production",
        "sanity-deploy": "lerna run sanity-deploy",
        "start": "lerna run empty-cache && lerna run graphql-deploy && lerna run start --parallel",
        "postinstall": "lerna bootstrap"
    },
    "devDependencies": {
        "lerna": "^3.14.1",
        "rimraf": "^2.6.3"
    }
}